
html
  -ms-text-size-adjust: 100%
  -webkit-text-size-adjust: 100%

body, button
  font-family: 'Roboto', 'sans-serif'

font-size = 15px

body
  font-size: font-size
  font-weight: normal
  line-height: 1.4
  -webkit-font-smoothing: antialiased
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  -webkit-touch-callout: none

b
  font-weight: 500

h1, h2, h3, h4, h5, h6
  font-weight: 400
  text-rendering: optimizeLegibility
  margin: 8px 0

h1
  font-size: floor(font-size * 9/3)
  line-height: floor(@font-size * 10/7)

h2
  font-size: floor(font-size * 7/3)
  line-height: floor(@font-size * 8/7)

h3
  font-size: floor(font-size * 8/5)
  line-height: floor(@font-size * 3/2)

h4
  font-size: floor(font-size * 4/3)
  font-weight: 500
  letter-spacing: 0.005em

h5
  font-size: floor(font-size + 1px)
  letter-spacing: 0.010em
  line-height: floor(@font-size * 3/2)

h6
  font-size: floor(font-size - 1px)
  letter-spacing: 0.020em

a, a:visited, a:hover, a:focus, a:active
  font-weight: inherit
