{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "indent": [
            true
        ],
        "interface-name": [
            false
        ],
        "semicolon": [
            true,
            "never"
        ],
        "arrow-parens": true,
        // Pending fix for shorthand property names.
        "object-literal-sort-keys": false
    },
    "rulesDirectory": []
}